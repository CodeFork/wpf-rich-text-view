<Window x:Class="RichTextViewLib.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:RichTextViewLib.Wpf"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <local:RichTextView x:Name="rtv" Background="AliceBlue" />
        <Grid Grid.Row="1" Background="Yellow">
            <StackPanel Orientation="Vertical">
                <TextBlock x:Name="plainText"/>
                <Button x:Name="btn" Content="Collapse/Expand"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
